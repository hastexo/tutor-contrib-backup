  jobTemplate:
    spec:
      template:
        spec:
          containers:
            - name: backup
              image: {{ BACKUP_DOCKER_IMAGE }}
              env:
                - name: MYSQL_HOST
                  value: '{{ MYSQL_HOST }}'
